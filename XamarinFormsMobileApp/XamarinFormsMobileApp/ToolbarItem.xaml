<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Toolbar Item"
             x:Class="XamarinFormsMobileApp.ToolbarItem">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" 
                     x:Name="Add"
                     Clicked="Add_Clicked"
                 IconImageSource="adduserimg"
                 Priority="2"
                 Order="Primary"/>
        <ToolbarItem Text="Profile"
                     x:Name="Profile"
                     Clicked="Profile_Clicked"
                     IconImageSource="profile"
                    Priority="1"
                    Order="Secondary"/>
        <ToolbarItem Text="Logout"
                     x:Name="Logout"
                     Clicked="Logout_Clicked"
                     IconImageSource="logout"
                     Priority="0"
                     Order="Secondary"/>
    </ContentPage.ToolbarItems>
</ContentPage>